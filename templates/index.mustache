<!doctype html>
<html>
    <head>
        <title>To Do</title>
    </head>
    <body>
        <h1>To Do List</h1>

        <form method="post" action="/">
            <label for"input-value">What would you like to add to the list?</label>
            <input type="text" id="item" name="item">
            <input type="submit" value="Add item to list">
        </form>
        
        <h2>To Do:</h2>
        <ul>
            {{#todoItems}}
                {{^complete}}
                    <form method="post" action="/{{id}}">
                        <li>
                        <input type="submit" value="Mark Complete" name="submit" id="submit">
                        {{item}}
                        </li>
                    </form>
                {{/complete}}
            {{/todoItems}}
        </ul>

        <h2>Completed:</h2>
        <ul>
            {{#todoItems}}
                {{#complete}}
                    <li> {{item}} </li>
                {{/complete}}
            {{/todoItems}}
        </ul>
       
    </body>
</html>
